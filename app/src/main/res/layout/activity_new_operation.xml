<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.tikhanovskiy.mymoneyflow.activity.NewCategoryActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тип операции"
        android:id="@+id/textView_type_operation"
        android:layout_marginTop="4dp" />

    <RadioGroup
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_type_operation">

        <RadioButton
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Расход"
            android:id="@+id/radioButton_expense"
            android:checked="true" />

        <RadioButton
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Доход"
            android:id="@+id/radioButton_profit"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Счет"
        android:id="@+id/textView_cash"
        android:layout_marginTop="4dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_cash" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Категория"
        android:id="@+id/textView_category"
        android:layout_marginTop="4dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_category" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сумма"
        android:id="@+id/textView_sum"
        android:layout_marginTop="4dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_sum"
        android:numeric="decimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Комментарий"
        android:id="@+id/textView_comment"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_comment" />
</LinearLayout>